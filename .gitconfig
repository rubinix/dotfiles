[user]
    name = Allen Riddle
    email = allenriddle@gmail.com

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    dh = diff HEAD
    lg = log -p
    l  = log --pretty=format:\"-- %h %ad %s\" --date=short
    tree = log --graph --pretty=oneline --decorate
    all = log --graph --pretty=oneline --decorate --all
    tree-with-author = log --graph --pretty=format:\"%h %s | AUTHOR: %an <%ae> %cd\" --decorate
    amend = commit --amend

[push]
    default = tracking

[branch]
    autosetuprebase = always

[color]
    ui = auto

[color "branch"]
    current = green
    ;current = blue
    remote = yellow

[color "diff"]
    frag = cyan
    ;frag = black
    old = yellow
    ;old = red
    new = green
    ;new = blue
    commit = cyan ul
    ;commit = black ul
    whitespace = cyan reverse
    ;whitespace = blue reverse

[color "status"]
    added = cyan
    ;added = blue
    changed = green
    ;changed = red
    untracked = yellow
    ;untracked = red

;; Color Attributes
; color.branch
; color.branch.current
